{{#if updateCommentForm}}
  <h4>Update Comment</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input class="form-control" value=author id="author" placeholder=comment.author}}
      </div>
      <div class="form-group">
        <label for="content">Content</label>
        {{textarea class="form-control" value=content id="content" placeholder=comment.content}}
      </div>
      <button {{action 'updateComment' comment}}>Update</button>
    </form>
  </div>
  {{else}}
  <button {{action 'updateCommentForm'}}>Update Comment</button>
  {{/if}}
