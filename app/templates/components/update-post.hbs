{{#if updatePostForm}}
  <h4>Update {{post.title}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input class="form-control" value=title id="title" placeholder=post.title}}
      </div>
      <div class="form-group">
        <label for="content">Content</label>
        {{textarea class="form-control" value=content id="content" placeholder=post.content}}
      </div>

      <button {{action 'update' post}}>Update</button>
    </form>
  </div>
{{else}}
  <button {{action 'updatePostForm'}}>Update Post</button>
{{/if}}
